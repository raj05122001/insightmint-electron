{
  "name": "insightmint-electron",
  "version": "1.0.0",
  "description": "InsightMint desktop agent: auto-summarize Word & PDF files on open",
  "author": "Your Name insightmint.ultimeet.io",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "api": "node mock-api-server.js",
    "dev": "concurrently \"npm run api\" \"npm run start\"",
    "dev-simple": "concurrently \"npm run api\" \"npm run start-simple\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "express": "^4.21.2",
    "mammoth": "^1.4.17",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^26.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.insightmint.app",
    "productName": "InsightMint",
    "icon": "assets/icon",
    "files": [
      "**/*"
    ],
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "Portable Document Format",
        "icon": "assets/pdf-icon.png"
      },
      {
        "ext": "docx",
        "name": "Word Document",
        "description": "Microsoft Word Document",
        "icon": "assets/word-icon.png"
      }
    ],
    "protocols": [
      {
        "name": "InsightMint",
        "schemes": [
          "insightmint"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
